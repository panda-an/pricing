<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lenovo.vro.pricing.mapper.ext.CostTapeOrderMapperExt">
  <resultMap id="BaseResultMap" type="com.lenovo.vro.pricing.entity.CostTapeOrder">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="order_name" jdbcType="VARCHAR" property="orderName" />
    <result column="region" jdbcType="VARCHAR" property="region" />
    <result column="country" jdbcType="VARCHAR" property="country" />
    <result column="local_currency" jdbcType="VARCHAR" property="localCurrency" />
    <result column="exchange_rates" jdbcType="DECIMAL" property="exchangeRates" />
    <result column="transport_type" jdbcType="VARCHAR" property="transportType" />
    <result column="user_id" jdbcType="VARCHAR" property="userId" />
    <result column="insert_time" jdbcType="TIMESTAMP" property="insertTime" />
  </resultMap>
  <sql id="Base_Column_List">
    id, order_name, region, country, local_currency, exchange_rates,
    transport_type, user_id, insert_time
  </sql>
  <select id="selectCostTapeList" parameterType="com.lenovo.vro.pricing.entity.CostTapeOrder" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from cost_tape_order
    <where>
      <if test="region != null">
        and region = #{region}
      </if>
      <if test="userId != null">
        and user_id = #{userId}
      </if>
      <if test="country != null">
        and country = #{country}
      </if>
      <if test="orderName != null">
        and order_name like concat ('%', '#{orderName}', '%')
      </if>
    </where>
    order by insert_time desc
  </select>

  <delete id="deleteCostTapeOrder" parameterType="java.lang.Integer">
    delete from cost_tape_order where id = #{id}
  </delete>
</mapper>