<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lenovo.vro.pricing.mapper.ext.WarrantyMapperExt">
  <resultMap id="BaseResultMap" type="com.lenovo.vro.pricing.entity.Warranty">
    <id column="warranty_code" jdbcType="VARCHAR" property="warrantyCode" />
    <result column="nbmc" jdbcType="DECIMAL" property="nbmc" />
  </resultMap>
  <sql id="Base_Column_List">
    w.warranty_code, w.nbmc
  </sql>

  <insert id="insertBatch" parameterType="java.util.List">
    insert into warranty (warranty_code, country, `type`, nbmc)
    values
    <foreach collection="list" item="item" index="index" separator=",">
    (#{item.warrantyCode,jdbcType=VARCHAR},  #{item.country,jdbcType=VARCHAR},
      #{item.type,jdbcType=VARCHAR}, #{item.nbmc,jdbcType=DECIMAL})
    </foreach>
  </insert>

  <update id="deleteAll">
    truncate warranty
  </update>

  <select id="selectMtmWarranty" parameterType="com.lenovo.vro.pricing.entity.ext.WarrantyExt" resultMap="BaseResultMap">
    select <include refid="Base_Column_List" />
    from warranty w
    inner join warranty_mtm_mapping m on w.warranty_code = m.warranty_code
    <where>
      <if test="mtm != null">
        and m.machine_type = #{mtm}
      </if>
      <if test="country != null">
        and w.country = #{country}
      </if>
      <if test="type != null">
        and w.`type` = #{type}
      </if>
    </where>
  </select>

</mapper>